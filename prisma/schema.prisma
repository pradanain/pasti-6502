generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPERADMIN
  ADMIN
}

enum QueueStatus {
  WAITING
  SERVING
  COMPLETED
  CANCELED
}

enum ServiceStatus {
  ACTIVE
  INACTIVE
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  password      String
  name          String
  role          Role           @default(ADMIN)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  queues        Queue[]        @relation("AdminQueue")
  notifications Notification[]
}

model Service {
  id        String        @id @default(uuid())
  name      String
  status    ServiceStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  queues    Queue[]
}

model Visitor {
  id          String   @id @default(uuid())
  name        String
  phone       String
  address     String?
  age         Int?
  gender      Gender?
  lastEducation LastEducation?
  occupation  String?
  institution String?
  email       String?
  purpose     Purpose?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  queues      Queue[]
}

enum QueueType {
  ONLINE
  OFFLINE
}

enum Gender {
  MALE
  FEMALE
}

enum LastEducation {
  SD
  SMP
  SMA_SMK
  D1
  D2
  D3
  D4_S1
  S2
  S3
  LAINNYA
}

enum Purpose {
  KONSULTASI_STATISTIK
  PERPUSTAKAAN
  REKOMENDASI_STATISTIK
  LAINNYA
}

model Queue {
  id           String      @id @default(uuid())
  queueNumber  Int
  status       QueueStatus @default(WAITING)
  queueType    QueueType   @default(OFFLINE)
  queueDate    DateTime    @default(now())
  visitorId    String
  visitor      Visitor     @relation(fields: [visitorId], references: [id])
  guestId      String?
  guest        Guest?      @relation(fields: [guestId], references: [id])
  serviceId    String
  service      Service     @relation(fields: [serviceId], references: [id])
  adminId      String?
  admin        User?       @relation("AdminQueue", fields: [adminId], references: [id])
  startTime    DateTime?
  endTime      DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  tempUuid     String?     @unique
  filledSKD    Boolean     @default(false)
  trackingLink String?     @unique

  @@index([visitorId])
  @@index([guestId])
  @@index([serviceId])
  @@index([adminId])
  @@index([createdAt])
  @@index([status, createdAt])
  @@unique([queueDate, queueNumber])
}

model QRCode {
  id         String   @id @default(uuid())
  staticUuid String   @unique
  path       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TempVisitorLink {
  id        String   @id @default(uuid())
  uuid      String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  used      Boolean  @default(false)
}

model Notification {
  id        String   @id @default(uuid())
  type      String // NEW_QUEUE, REMINDER_SKD, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String? // Optional, if notification is targeted to specific user
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Guest {
  id             String         @id @default(uuid())
  fullName       String
  email          String?
  address        String?
  phone          String
  age            Int?
  institution    String?
  gender         Gender?
  lastEducation  LastEducation?
  occupation     String?
  purpose        Purpose?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  queues         Queue[]
}
